<!DOCTYPE html>
<html lang="en">
<!-- header -->
<%- include("../partials/header.ejs") %>

  <body>
    <!-- navbar -->
    <%- include("../partials/nav.ejs") %>



      <!-- products -->
      <section class="products">
        <!-- filters -->
        <div class="filters">
          <div class="filters-container">
            <!-- search -->
            <form class="input-form">
              <input type="text" class="search-input" placeholder="search..." />
            </form>
            <!-- categories -->
            <h4>Company</h4>
            <article class="companies">
              <button class="company-btn">all</button>
              <button class="company-btn">ikea</button>
            </article>
            <!-- price -->
            <h4>Price</h4>
            <form class="price-form">
              <input type="range" class="price-filter" min="0" value="50" max="100" />
            </form>
            <p class="price-value">50</p>
          </div>
        </div>
        <!-- products -->
        <div class="products-container">

          <% if (phones.length> 0) { %>
            <% phones.forEach((phone)=> { %>
              <article class="product">
                <div class="product-container">
                  <img class="product-img img" src=<%=phone.image %> alt="" />

                  <div class="product-icons">
                    <a href="/<%=phone._id%>" class="product-icon">
                      <i class="fas fa-search"></i>
                    </a>
                    <button class="product-cart-btn product-icon" data-id=<%=phone._id %> >
                      <i class="fas fa-shopping-cart"></i>
                    </button>
                  </div>
                </div>
                <footer>
                  <p class="product-name">
                    <%= phone.name %>
                  </p>
                  <h4 class="product-price">
                    <%= phone.price %>
                  </h4>
                </footer>
              </article>
              <% }) %>

                <% } else { %>
                  <p>There are no phone to display...</p>
                  <% } %>
      </section>


      <!-- Jquery -->
      <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>

      <!-- Option 1: Bootstrap Bundle with Popper -->
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
        crossorigin="anonymous"></script>
  </body>

</html>